<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Join the Fight Against Hunger"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center"
        android:paddingTop="5dp"/>

    <ImageView
        android:id="@+id/firstimg"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:drawable/ic_menu_gallery"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
       >

        <TextView
            android:id="@+id/txtdetailTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:text="Cake"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/txtdetailStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Avaiable"
            android:textSize="16sp"
            android:padding="5dp"
             />


    </LinearLayout>

    <TextView
        android:id="@+id/txtbestbefore"

        android:paddingLeft="5dp"
        android:paddingBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Best before : "
        android:textSize="16sp"
     />
    <TextView
        android:id="@+id/txtShowPrice"

        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price : "
        android:textSize="16sp"
        android:textStyle="bold"

     />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_marginVertical="16dp"/>

    <TextView
        android:id="@+id/txtdetaildesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:gravity="left"
        android:textColor="@color/black"
        android:layout_marginLeft="5dp"
        android:layout_marginEnd="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Photos"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="5dp"
        />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/detailimgview"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/detailimgview2"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/detailimgview3"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/detailimgview4"
            android:layout_width="140dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:background="@android:drawable/ic_menu_gallery"
            android:scaleType="centerInside"
            android:visibility="gone"
            />

    </LinearLayout>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pickup Address"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:padding="5dp"
        />

    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        android:gravity="center_vertical">

        <ImageView

            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/navigation"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtdetailaddress"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp"/>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</LinearLayout>